@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using asm3.Models;
@model Product;

Product Code :

<form id="idfrm" asp-controller="Home" asp-action="Index" method="post">
    <select name="id" onchange="changeid()" asp-for=@Model.ProductCode>
        @foreach (Product item in @ViewBag.ProductsID)
        {
            @if (@item.ProductCode == @ViewBag.Selected)
            {
                <option value="@item.ProductCode" selected>@item.ProductCode</option>
            }
            else
            {
                <option value="@item.ProductCode">@item.ProductCode</option>
            }

        }
    </select>
    <script>
        function changeid() {
            document.getElementById("idfrm").submit();
        }
    </script>
</form>
<form id="frm" asp-controller="Home" asp-action="Name" method="post">
    <br /> ProductName:  <input type="text" value="@ViewBag.Out.ProductName" name="txt" asp-for=@Model.ProductName />
    <button onclick="changeCate()">Filter by Name</button>
    <script>
        function changeCate() {
            document.getElementById("frm").submit();
        }
    </script>
</form>
<br /> Unit:
<input type="text" value="@ViewBag.Out.Unit" asp-for=@Model.Unit />
