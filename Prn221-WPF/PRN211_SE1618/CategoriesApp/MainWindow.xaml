<Window x:Class="DemoFirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoFirstWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0" Name="root_grid">
        <TextBlock Name="txtWelcome" Text="Welcome to WPF"
            TextAlignment="Center" Height="30" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold">
        </TextBlock>
        <Button Name="btnClick" Content="Click Me" HorizontalAlignment="Left" Margin="176,272,0,0" VerticalAlignment="Top" Height="35" Width="137" Click="btnClick_Click"/>
        <Button Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="464,272,0,0" VerticalAlignment="Top" Height="35" Width="137" Click="btnAdd_Click"/>
        <Button Name="btnChange" Background="Red" Content="Change" HorizontalAlignment="Left" Margin="334,348,0,0" VerticalAlignment="Top" Height="29" Width="162" Click="btnChange_Click"/>

    </Grid>

</Window>
