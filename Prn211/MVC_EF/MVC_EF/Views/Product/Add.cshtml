@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using MVC_EF.Models;
@model Product

<form asp-controller="Product" asp-action="Add" method="post">
    <br /> ProductName:  <input type="text" asp-for=ProductName />
    <br /> UnitPrice:  <input type="number" asp-for=UnitPrice />
    <br /> UnitsInStock:  <input type="number" asp-for=UnitsInStock />
    <br /> Image:  <input type="text" asp-for=Image />
    <br />
    <select asp-for=CategoryId>
        <option value="0">All Categories</option>
        @foreach (Category item in @ViewBag.Categories)
        {
                <option value="@item.CategoryId">@item.CategoryName</option>
        }
    </select>
    Discon : <input type="radio" asp-for=Discontinued value="false"/>
    <input type="radio" asp-for=Discontinued value="true" />
    <br /><input type="submit" value="ADD" />
</form>