@using MVC_EF.Models;
@model Product;

@{
}
</br>Cap nhat thong tin cua product:
<form asp-controller="Product" asp-action="Update" method="post">
    Product ID: <input type="hidden" asp-for="@Model.ProductId" value=@Model.ProductId />
    Product Name: <input type="text" asp-for="@Model.ProductName" /> <span asp-validation-for="ProductName"> </span><br />
    Price: <input type="text" asp-for="@Model.UnitPrice" /> <span asp-validation-for="UnitPrice"> </span><br />
    Unit in stock: <input type="text" asp-for="@Model.UnitsInStock" /> <span asp-validation-for="UnitsInStock"> </span><br />
    Image: <input type="text" asp-for="@Model.Image" /> <span asp-validation-for="Image"> </span><br />
    Categoty: 
    <select asp-for="@Model.CategoryId">
        @foreach (Category c in ViewBag.Categories)
        {
            @if (Model.CategoryId == c.CategoryId)
            {
                        <option value=@c.CategoryId selected>
                    @c.CategoryName
                        </option>
            }
            else
            {
                        <option value=@c.CategoryId>
                    @c.CategoryName
                        </option>
            }

        }
    </select>
    </br>
    <input type="submit" value="UPDATE" />
</form>