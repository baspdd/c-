@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplication1.Models;



Questtion : @ViewBag.quest.question
<br />
<form id="frm" asp-controller="Class" asp-action="Index" method="get">
    <input type="hidden" name="selection" / value="0"> @ViewBag.quest.answer1
    <input type="radio" name="selection" / value="1"> @ViewBag.quest.answer1
    <br />
    <input type="radio" name="selection" / value="2"> @ViewBag.quest.answer2
    <br />
    <input type="radio" name="selection" / value="3"> @ViewBag.quest.answer3
    <br />
    <input type="radio" name="selection" / value="4"> @ViewBag.quest.answer4

    @if (ViewBag.Index != null)
    {
        <div>
            <input type="hidden" name="index" value="@ViewBag.Index" />
            <input type="submit" value="Next" />
        </div>
    }
    else
    {
        <form id="frm" asp-controller="Class" asp-action="submit" method="get">
            <div>
                <input type="submit" value="submit" />
            </div>
        </form>
    }
</form>
