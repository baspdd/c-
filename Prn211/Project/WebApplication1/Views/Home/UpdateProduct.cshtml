@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplication1.Models;

<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Update</title>

    <!-- slider stylesheet -->
    <link rel="stylesheet" type="text/css"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.3/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/site.css" f" />
    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Poppins:400,700&display=swap" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>
@{
    Product prod = ViewBag.P;
}
@model Product

<body class="sub_page">
    @Html.Partial("Navbar.cshtml")

    <section class="discount_section  layout_padding">
        <div class="container">
            <div class="row">
                <form asp-controller="Home" asp-action="UpdateProduct" method="post">
                    <div class="col-md-6">
                        <div class="detail-box">
                            <input disabled name="pid" value=@prod.Id asp-for="Id"/>
                            <h4>
                                % Discount :<input name="isS" value="@prod.IsSale" type="number" min="0" max="100" asp-for=IsSale />
                            </h4>
                            <h3 class="main_heading">
                                <input name="title" value="@prod.Title" type="text" asp-for=Title/>
                            </h3>
                            <h10>Category : @prod.TypeNavigation.Name
                                <input type="hidden" name="type" value="@prod.Type" asp-for=Type/>
                            </h10>
                            <h10>Price : <input name="price" value="@prod.Price" type="number" min="1" asp-for=Price /></h10>
                            <h10>Description :
                                
                                <input name="des" value="@prod.Description" type="text" style="width:contain" asp-for=Description />
                                </h10>
                            <h10>
                                Quantity  :  <input name="am" name="" value="@prod.Amount" type="number" min="0" asp-for=Amount/>
                            </h10>
                            <h10>
                                img link  :  <input name="img" type="text" value="@prod.Image" asp-for=Image />
                            </h10>
                            <div class="btn-box">
                                <input type="submit" class="" value="Update" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="col-md-6">
                    <div class="img-box">
                        <img src="@prod.Image" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>




    <script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.min.js">
    </script>
    <script type="text/javascript">
        $(".owl-carousel").owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            navText: [],
            autoplay: true,
            autoplayHoverPause: true,
            responsive: {
                0: {
                    items: 1
                },
                420: {
                    items: 2
                },
                1000: {
                    items: 5
                }
            }

        });
    </script>
    <script>
        var nav = $("#navbarSupportedContent");
        var btn = $(".custom_menu-btn");
        btn.click
        btn.click(function (e) {

            e.preventDefault();
            nav.toggleClass("lg_nav-toggle");
            document.querySelector(".custom_menu-btn").classList.toggle("menu_btn-style")
        });
    </script>
    <script>
        $('.carousel').on('slid.bs.carousel', function () {
            $(".indicator-2 li").removeClass("active");
            indicators = $(".carousel-indicators li.active").data("slide-to");
            a = $(".indicator-2").find("[data-slide-to='" + indicators + "']").addClass("active");
            console.log(indicators);

        })
    </script>

</body>
</html>